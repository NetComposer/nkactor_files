
{cover_enabled, true}.

{erl_opts, [
    debug_info, {parse_transform, lager_transform}
]}.

{deps, [
    {nkpacket, {git, "http://github.com/netcomposer/nkpacket", {branch, "master"}}},
    {nkactor, {git, "http://github.com/netcomposer/nkactor", {branch, "master"}}}
]}.


{xref_checks, [
    undefined_function_calls, undefined_functions,
    locals_not_used, deprecated_function_calls, deprecated_functions
]}.
